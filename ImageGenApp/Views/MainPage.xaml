<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="ImageGenApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ImageGenApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Unloaded="MainPage_Unloaded">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŽ¨" FontSize="24" Margin="0,0,8,0"/>
                    <TextBlock Text="AI Image Generator" Style="{StaticResource AppTextHeading}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="PromptTemplatesButton" Content="ðŸ’¡ Templates" Style="{StaticResource AppButtonSecondary}" Click="OnPromptTemplatesClicked"/>
                    <Button x:Name="SettingsButton" Content="âš™ï¸ Settings" Style="{StaticResource AppButtonSecondary}" Click="OnSettingsClicked"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Images -->
            <Border Grid.Column="0" Style="{StaticResource AppCard}" Margin="0,0,8,0">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Images" Style="{StaticResource AppTextSubheading}"/>

                        <!-- Primary Image -->
                        <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" MinHeight="200">
                            <Grid>
                                <Image x:Name="PrimaryImage" Stretch="Uniform" Margin="8"/>
                                <Button x:Name="UploadPrimaryButton" Content="ðŸ“ Add Primary Image" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource AppButtonSecondary}" Click="OnUploadPrimaryClicked" Visibility="Visible"/>
                                <Button x:Name="RemovePrimaryButton" Content="âŒ" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Style="{StaticResource AppButtonSecondary}" Click="OnRemovePrimaryClicked" Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Additional Images -->
                        <TextBlock Text="Additional Images (Optional)" Style="{StaticResource AppTextBody}" FontWeight="SemiBold"/>
                        <Button x:Name="AddImageButton" Content="âž• Add Image" Style="{StaticResource AppButtonSecondary}" Click="OnAddImageClicked" HorizontalAlignment="Stretch"/>

                        <ItemsControl x:Name="AdditionalImagesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,8,0,0" Height="120">
                                        <Grid>
                                            <Image Source="{Binding ImageSource}" Stretch="Uniform" Margin="8"/>
                                            <Button Content="âŒ" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Style="{StaticResource AppButtonSecondary}" Click="OnRemoveAdditionalClicked" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Prompt and Results -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Prompt Section -->
                <Border Grid.Row="0" Style="{StaticResource AppCard}" Margin="0,0,0,8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Prompt" Style="{StaticResource AppTextSubheading}"/>
                        <TextBox x:Name="PromptTextBox" PlaceholderText="Describe what you want the AI to do with your image..." TextWrapping="Wrap" AcceptsReturn="True" Height="100" FontSize="{StaticResource AppFontSizeNormal}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="ClearButton" Grid.Column="0" Content="ðŸ—‘ï¸ Clear" Style="{StaticResource AppButtonSecondary}" Click="OnClearClicked"/>
                            <Button x:Name="GenerateButton" Grid.Column="2" Content="ðŸš€ Generate" Style="{StaticResource AppButtonPrimary}" Click="OnGenerateClicked"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Results Section -->
                <Border Grid.Row="1" Style="{StaticResource AppCard}" Margin="0,0,0,8">
                    <Grid>
                        <Image x:Name="ResultImage" Stretch="Uniform"/>
                        <StackPanel x:Name="ResultPlaceholder" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                            <TextBlock Text="ðŸ¤– AI Result" Style="{StaticResource AppTextSubheading}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Your generated image will appear here" Style="{StaticResource AppTextCaption}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <Border Grid.Row="2" Style="{StaticResource AppCard}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                        <Button x:Name="DownloadButton" Content="ðŸ’¾ Download" Style="{StaticResource AppButtonPrimary}" Click="OnDownloadClicked" IsEnabled="False"/>
                        <Button x:Name="CopyPromptButton" Content="ðŸ“‹ Copy Prompt" Style="{StaticResource AppButtonSecondary}" Click="OnCopyPromptClicked" IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.95" Visibility="Collapsed" Grid.RowSpan="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <controls:Loading x:Name="LoadingSpinner" IsLoading="True" HorizontalAlignment="Center"/>
                <TextBlock x:Name="LoadingText" Text="Generating image..." Style="{StaticResource AppTextSubheading}" HorizontalAlignment="Center"/>
                <ProgressBar x:Name="ProgressBar" Width="200" IsIndeterminate="True"/>
            </StackPanel>
        </Border>

        <!-- API Key Warning -->
        <Border x:Name="ApiKeyWarning" Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" CornerRadius="8" Padding="16" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="16" Visibility="Collapsed">
            <StackPanel Spacing="8">
                <TextBlock Text="âš ï¸ API Key Required" Style="{StaticResource AppTextSubheading}" Foreground="#856404"/>
                <TextBlock Text="Please configure your API key in settings to use this application." Style="{StaticResource AppTextBody}" Foreground="#856404" TextWrapping="Wrap"/>
                <Button Content="Open Settings" Style="{StaticResource AppButtonSecondary}" HorizontalAlignment="Center" Click="OnSettingsClicked"/>
            </StackPanel>
        </Border>

        <!-- Settings Panel Overlay -->
        <Border x:Name="SettingsPanelOverlay" Background="{ThemeResource SystemControlAcrylicWindowBrush}" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Click area to close panel -->
                <Border Grid.Column="0" Background="Transparent" Tapped="OnSettingsPanelOverlayTapped"/>

                <!-- Settings Panel -->
<Border x:Name="SettingsPanel" Grid.Column="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1,0,0,0"
                        Width="700" MinWidth="600" MaxWidth="800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âš™ï¸ Settings" Style="{StaticResource AppTextHeading}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="âœ•" Click="OnCloseSettingsPanelClicked" 
                                        Style="{StaticResource AppButtonSecondary}" Background="Transparent"/>
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <ScrollViewer Grid.Row="1" Padding="16">
                            <StackPanel Spacing="16">
                                <!-- API Key Section -->
                                <Border Style="{StaticResource AppCard}">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="API Configuration" Style="{StaticResource AppTextSubheading}"/>
                                        <TextBlock Text="Enter your ImageGen API key to enable image generation." Style="{StaticResource AppTextCaption}" TextWrapping="Wrap"/>
                                        <TextBox x:Name="ApiKeyTextBox" PlaceholderText="Enter your API key..." FontSize="{StaticResource AppFontSizeNormal}"/>
                                        <TextBlock Text="ðŸ”’ Your API key is stored securely on your local device only." Style="{StaticResource AppTextCaption}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Default Settings Section -->
                                <Border Style="{StaticResource AppCard}">
                                    <StackPanel Spacing="16">
                                        <TextBlock Text="Default Generation Settings" Style="{StaticResource AppTextSubheading}"/>
                                        <TextBlock Text="These settings will be used as defaults for all image generations." Style="{StaticResource AppTextCaption}" TextWrapping="Wrap"/>

                                        <!-- Quality Setting -->
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Image Quality" Style="{StaticResource AppTextBody}" FontWeight="SemiBold"/>
                                            <ComboBox x:Name="QualityComboBox" FontSize="{StaticResource AppFontSizeNormal}">
                                                <ComboBoxItem Content="Standard" Tag="Standard"/>
                                                <ComboBoxItem Content="High" Tag="High"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Format Setting -->
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Output Format" Style="{StaticResource AppTextBody}" FontWeight="SemiBold"/>
                                            <ComboBox x:Name="FormatComboBox" FontSize="{StaticResource AppFontSizeNormal}">
                                                <ComboBoxItem Content="JPEG" Tag="Jpeg"/>
                                                <ComboBoxItem Content="PNG" Tag="Png"/>
                                                <ComboBoxItem Content="WebP" Tag="Webp"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Fidelity Setting -->
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Input Fidelity" Style="{StaticResource AppTextBody}" FontWeight="SemiBold"/>
                                            <TextBlock Text="Higher fidelity preserves more details from input images." Style="{StaticResource AppTextCaption}" TextWrapping="Wrap"/>
                                            <ComboBox x:Name="FidelityComboBox" FontSize="{StaticResource AppFontSizeNormal}">
                                                <ComboBoxItem Content="Default" Tag="Default"/>
                                                <ComboBoxItem Content="High" Tag="High"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- About Section -->
                                <Border Style="{StaticResource AppCard}" Background="{ThemeResource SystemControlAcrylicElementBrush}">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="About" Style="{StaticResource AppTextSubheading}"/>
                                        <TextBlock Text="AI Image Generator" Style="{StaticResource AppTextBody}" FontWeight="SemiBold"/>
                                        <TextBlock Text="A modern desktop application for AI-powered image generation and editing." TextWrapping="Wrap" Style="{StaticResource AppTextCaption}"/>
                                        <TextBlock Text="Built with WinUI 3 and .NET 9" Style="{StaticResource AppTextCaption}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer -->
                        <Border Grid.Row="2" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                <Button x:Name="CancelSettingsButton" Content="Cancel" Style="{StaticResource AppButtonSecondary}" Click="OnCancelSettingsClicked"/>
                                <Button x:Name="SaveSettingsButton" Content="Save" Style="{StaticResource AppButtonPrimary}" Click="OnSaveSettingsClicked"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Prompt Templates Panel Overlay -->
        <Border x:Name="PromptTemplatesPanelOverlay" Background="{ThemeResource SystemControlAcrylicWindowBrush}" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Click area to close panel -->
                <Border Grid.Column="0" Background="Transparent" Tapped="OnPromptTemplatesPanelOverlayTapped"/>

                <!-- Prompt Templates Panel -->
                <Border x:Name="PromptTemplatesPanel" Grid.Column="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1,0,0,0"
                        Width="700" MinWidth="600" MaxWidth="800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ’¡ Prompt Templates" Style="{StaticResource AppTextHeading}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="âœ•" Click="OnClosePromptTemplatesPanelClicked" 
                                        Style="{StaticResource AppButtonSecondary}" Background="Transparent"/>
                            </Grid>
                        </Border>

                        <!-- Search -->
                        <Border Grid.Row="1" Padding="16,8">
                            <TextBox x:Name="TemplateSearchBox" PlaceholderText="ðŸ” Search templates..." FontSize="{StaticResource AppFontSizeNormal}" 
                                     TextChanged="OnTemplateSearchTextChanged"/>
                        </Border>

                        <!-- Templates List -->
                        <ScrollViewer Grid.Row="2" Padding="16,0,16,16">
                            <StackPanel x:Name="TemplatesContainer" Spacing="16">
                                <!-- Templates will be populated dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
