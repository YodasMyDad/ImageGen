<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="ImageGenApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ImageGenApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Unloaded="MainPage_Unloaded">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{ThemeResource SystemControlAcrylicWindowBrush}" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎨" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="AI Image Generator" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button x:Name="PromptTemplatesButton" Content="💡 Templates" Style="{StaticResource Action}" Click="OnPromptTemplatesClicked"/>
                    <Button x:Name="SettingsButton" Content="⚙️ Settings" Style="{StaticResource Action}" Click="OnSettingsClicked"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Images -->
            <Border Grid.Column="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" CornerRadius="8" Margin="0,0,10,0">
                <ScrollViewer>
                    <StackPanel Margin="15" Spacing="15">
                        <TextBlock Text="Images" FontSize="16" FontWeight="SemiBold"/>

                        <!-- Primary Image -->
                        <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" CornerRadius="4" MinHeight="200">
                            <Grid>
                                <Image x:Name="PrimaryImage" Stretch="Uniform" Margin="10"/>
                                <Button x:Name="UploadPrimaryButton" Content="📁 Upload Primary Image" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Action}" Click="OnUploadPrimaryClicked" Visibility="Visible"/>
                                <Button x:Name="RemovePrimaryButton" Content="❌" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Style="{StaticResource Action}" Background="Red" Foreground="White" Click="OnRemovePrimaryClicked" Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Additional Images -->
                        <TextBlock Text="Additional Images (Optional)" FontSize="14" FontWeight="SemiBold"/>
                        <Button x:Name="AddImageButton" Content="➕ Add Image" Style="{StaticResource Action}" Click="OnAddImageClicked"/>

                        <ItemsControl x:Name="AdditionalImagesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" CornerRadius="4" Margin="0,5,0,0" Height="120">
                                        <Grid>
                                            <Image Source="{Binding ImageSource}" Stretch="Uniform" Margin="5"/>
                                            <Button Content="❌" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Style="{StaticResource Action}" Background="Red" Foreground="White" Click="OnRemoveAdditionalClicked" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Prompt and Results -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Prompt Section -->
                <Border Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" CornerRadius="8" Margin="0,0,0,10">
                    <StackPanel Margin="15" Spacing="10">
                        <TextBlock Text="Prompt" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="PromptTextBox" PlaceholderText="Describe what you want the AI to do with your image..." TextWrapping="Wrap" AcceptsReturn="True" Height="100" FontSize="14"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="GenerateButton" Grid.Column="0" Content="🚀 Generate" Style="{StaticResource PrimaryAction}" Click="OnGenerateClicked"/>
                            <Button x:Name="ClearButton" Grid.Column="1" Content="🗑️ Clear" Style="{StaticResource Action}" Margin="10,0,0,0" Click="OnClearClicked"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Results Section -->
                <Border Grid.Row="1" Background="{ThemeResource SystemControlAcrylicElementBrush}" CornerRadius="8" Margin="0,0,0,10">
                    <Grid>
                        <Image x:Name="ResultImage" Stretch="Uniform" Margin="15"/>
                        <StackPanel x:Name="ResultPlaceholder" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <TextBlock Text="🤖 AI Result" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Your generated image will appear here" FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <Border Grid.Row="2" Background="{ThemeResource SystemControlAcrylicElementBrush}" CornerRadius="8">
                    <StackPanel Margin="15" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                        <Button x:Name="DownloadButton" Content="💾 Download" Style="{StaticResource PrimaryAction}" Click="OnDownloadClicked" IsEnabled="False"/>
                        <Button x:Name="CopyPromptButton" Content="📋 Copy Prompt" Style="{StaticResource Action}" Click="OnCopyPromptClicked" IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Background="{ThemeResource SystemControlAcrylicWindowBrush}" Visibility="Collapsed" Grid.RowSpan="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <controls:Loading x:Name="LoadingSpinner" IsLoading="True" HorizontalAlignment="Center"/>
                <TextBlock x:Name="LoadingText" Text="Generating image..." FontSize="16" HorizontalAlignment="Center"/>
                <ProgressBar x:Name="ProgressBar" Width="200" IsIndeterminate="True"/>
            </StackPanel>
        </Border>

        <!-- API Key Warning -->
        <Border x:Name="ApiKeyWarning" Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" CornerRadius="4" Padding="15" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Visibility="Collapsed">
            <StackPanel Spacing="10">
                <TextBlock Text="⚠️ API Key Required" FontSize="16" FontWeight="SemiBold" Foreground="#856404"/>
                <TextBlock Text="Please configure your API key in settings to use this application." FontSize="14" Foreground="#856404" TextWrapping="Wrap"/>
                <Button Content="Open Settings" Style="{StaticResource Action}" HorizontalAlignment="Center" Click="OnSettingsClicked"/>
            </StackPanel>
        </Border>

        <!-- Settings Panel Overlay -->
        <Border x:Name="SettingsPanelOverlay" Background="#80000000" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Click area to close panel -->
                <Border Grid.Column="0" Background="Transparent" Tapped="OnSettingsPanelOverlayTapped"/>

                <!-- Settings Panel -->
<Border x:Name="SettingsPanel" Grid.Column="1" Background="{ThemeResource SystemControlAcrylicElementBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1,0,0,0"
                        Width="700" MinWidth="600" MaxWidth="800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="⚙️ Settings" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="✕" Click="OnCloseSettingsPanelClicked" 
                                        Style="{StaticResource Action}" Background="Transparent"/>
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <ScrollViewer Grid.Row="1" Padding="20">
                            <StackPanel Spacing="20">
                                <!-- API Key Section -->
                                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" CornerRadius="4" Padding="15">
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="API Configuration" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="Enter your ImageGen API key to enable image generation." FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" TextWrapping="Wrap"/>
                                        <TextBox x:Name="ApiKeyTextBox" PlaceholderText="Enter your API key..." FontSize="14"/>
                                        <TextBlock Text="🔒 Your API key is stored securely on your local device only." FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Default Settings Section -->
                                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" CornerRadius="4" Padding="15">
                                    <StackPanel Spacing="15">
                                        <TextBlock Text="Default Generation Settings" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="These settings will be used as defaults for all image generations." FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" TextWrapping="Wrap"/>

                                        <!-- Quality Setting -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Image Quality" FontSize="14" FontWeight="SemiBold"/>
                                            <ComboBox x:Name="QualityComboBox" FontSize="14">
                                                <ComboBoxItem Content="Standard" Tag="Standard"/>
                                                <ComboBoxItem Content="High" Tag="High"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Format Setting -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Output Format" FontSize="14" FontWeight="SemiBold"/>
                                            <ComboBox x:Name="FormatComboBox" FontSize="14">
                                                <ComboBoxItem Content="JPEG" Tag="Jpeg"/>
                                                <ComboBoxItem Content="PNG" Tag="Png"/>
                                                <ComboBoxItem Content="WebP" Tag="Webp"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Fidelity Setting -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Input Fidelity" FontSize="14" FontWeight="SemiBold"/>
                                            <TextBlock Text="Higher fidelity preserves more details from input images." FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" TextWrapping="Wrap"/>
                                            <ComboBox x:Name="FidelityComboBox" FontSize="14">
                                                <ComboBoxItem Content="Default" Tag="Default"/>
                                                <ComboBoxItem Content="High" Tag="High"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- About Section -->
                                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Background="{ThemeResource SystemControlAcrylicElementBrush}">
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="About" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="AI Image Generator" FontSize="14" FontWeight="SemiBold"/>
                                        <TextBlock Text="A modern desktop application for AI-powered image generation and editing." TextWrapping="Wrap" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        <TextBlock Text="Built with WinUI 3 and .NET 9" FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer -->
                        <Border Grid.Row="2" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="20,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                                <Button x:Name="CancelSettingsButton" Content="Cancel" Style="{StaticResource Action}" Click="OnCancelSettingsClicked"/>
                                <Button x:Name="SaveSettingsButton" Content="Save" Style="{StaticResource PrimaryAction}" Click="OnSaveSettingsClicked"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Prompt Templates Panel Overlay -->
        <Border x:Name="PromptTemplatesPanelOverlay" Background="#80000000" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Click area to close panel -->
                <Border Grid.Column="0" Background="Transparent" Tapped="OnPromptTemplatesPanelOverlayTapped"/>

                <!-- Prompt Templates Panel -->
                <Border x:Name="PromptTemplatesPanel" Grid.Column="1" Background="{ThemeResource SystemControlAcrylicElementBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1,0,0,0"
                        Width="700" MinWidth="600" MaxWidth="800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="💡 Prompt Templates" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="✕" Click="OnClosePromptTemplatesPanelClicked" 
                                        Style="{StaticResource Action}" Background="Transparent"/>
                            </Grid>
                        </Border>

                        <!-- Search -->
                        <Border Grid.Row="1" Padding="20,10">
                            <TextBox x:Name="TemplateSearchBox" PlaceholderText="🔍 Search templates..." FontSize="14" 
                                     TextChanged="OnTemplateSearchTextChanged"/>
                        </Border>

                        <!-- Templates List -->
                        <ScrollViewer Grid.Row="2" Padding="20,0,20,20">
                            <StackPanel x:Name="TemplatesContainer" Spacing="15">
                                <!-- Templates will be populated dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
