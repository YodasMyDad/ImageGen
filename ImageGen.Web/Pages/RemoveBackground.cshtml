@page
@model RemoveBackgroundModel
@{
    ViewData["Title"] = "Remove Background";
}

<div class="container mt-4">
    <h1>Remove Background</h1>
    <p class="text-muted">Use AI to remove image backgrounds automatically.</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (string.IsNullOrEmpty(Model.OriginalImageUrl))
    {
        <!-- Upload Form -->
        <div class="card mb-4">
            <div class="card-body">
                <h5>Step 1: Upload Image</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Select Image</label>
                        <input type="file" name="imageFile" accept="image/*" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Background Type</label>
                        <select name="backgroundType" class="form-select">
                            <option value="transparent" selected>Transparent</option>
                            <option value="white">White</option>
                        </select>
                    </div>
                    <button type="submit" asp-page-handler="Upload" class="btn btn-primary">Upload Image</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <!-- Preview and Process -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Original Image</h5>
                        <img src="@Model.OriginalImageUrl" class="img-fluid" style="max-height: 300px;">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Step 2: Process</h5>
                        <form method="post">
                            <input type="hidden" name="originalImageUrl" value="@Model.OriginalImageUrl">
                            <input type="hidden" name="backgroundType" value="@Model.BackgroundType">

                            <p>Background type: <strong>@(Model.BackgroundType == "transparent" ? "Transparent" : "White")</strong></p>

                            <div class="mb-3">
                                <label for="prompt" class="form-label">AI Prompt</label>
                                <textarea name="prompt" id="prompt" class="form-control" rows="3" placeholder="Enter your prompt for background removal">@Model.Prompt</textarea>
                            </div>

                            <button type="submit" asp-page-handler="Process" class="btn btn-success">Remove Background with AI</button>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.ResultImageUrl))
                        {
                            <div class="mt-4">
                                <h6>Result</h6>
                                <img src="@Model.ResultImageUrl" class="img-fluid mb-3" style="max-height: 300px;">
                                <div>
                                    <a href="@Model.ResultImageUrl" class="btn btn-primary btn-sm" download>Download Result</a>
                                    <a href="@Url.Page("RemoveBackground")" class="btn btn-secondary btn-sm">Try Another</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    }
</div>
