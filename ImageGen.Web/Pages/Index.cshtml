@page
@model IndexModel
@{
    ViewData["Title"] = "ImageGen AI Demo";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">AI Image Editing Demo</h1>
        <p class="lead text-muted">
            Simple examples using OpenAI's GPT-Image-1 model for image generation and editing.
        </p>
        <div class="alert alert-info mt-3">
            <strong>Note:</strong> Make sure your OpenAI API key is configured in appsettings.json
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-eraser display-4 text-primary"></i>
                    </div>
                    <h5 class="card-title">Remove Background</h5>
                    <p class="card-text">Remove image backgrounds automatically</p>
                    <a asp-page="/RemoveBackground" class="btn btn-primary">Try It</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-badge-tm display-4 text-warning"></i>
                    </div>
                    <h5 class="card-title">Add Logo</h5>
                    <p class="card-text">Add logos to images with AI blending</p>
                    <a asp-page="/AddLogo" class="btn btn-warning">Try It</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-palette display-4 text-success"></i>
                    </div>
                    <h5 class="card-title">Change Background</h5>
                    <p class="card-text">Replace image backgrounds</p>
                    <a asp-page="/ChangeBackground" class="btn btn-success">Try It</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-stars display-4 text-info"></i>
                    </div>
                    <h5 class="card-title">Enhance Product</h5>
                    <p class="card-text">Improve product photos</p>
                    <a asp-page="/EnhanceProduct" class="btn btn-info">Try It</a>
                </div>
            </div>
        </div>

    </div>
</div>
