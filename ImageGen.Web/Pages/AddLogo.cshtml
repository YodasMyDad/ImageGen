@page
@model AddLogoModel
@{
    ViewData["Title"] = "Add Logo to Image";
}

<div class="container mt-4">
    <h1>Add Logo to Image</h1>
    <p class="text-muted">Use AI to add a logo to your image with natural blending.</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (string.IsNullOrEmpty(Model.MainImageUrl) || string.IsNullOrEmpty(Model.LogoImageUrl))
    {
        <!-- Upload Form -->
        <div class="card mb-4">
            <div class="card-body">
                <h5>Step 1: Upload Images</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Main Image</label>
                        <input type="file" name="mainImage" accept="image/*" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Logo Image</label>
                        <input type="file" name="logoImage" accept="image/*" class="form-control" required>
                    </div>
                    <button type="submit" asp-page-handler="Upload" class="btn btn-primary">Upload Images</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <!-- Preview and Process -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Uploaded Images</h5>
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Main Image:</strong></p>
                                <img src="@Model.MainImageUrl" class="img-fluid" style="max-height: 200px;">
                            </div>
                            <div class="col-6">
                                <p><strong>Logo:</strong></p>
                                <img src="@Model.LogoImageUrl" class="img-fluid" style="max-height: 200px;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Step 2: Configure Logo</h5>
                        <form method="post">
                            <input type="hidden" name="mainImageUrl" value="@Model.MainImageUrl">
                            <input type="hidden" name="logoImageUrl" value="@Model.LogoImageUrl">

                            <div class="mb-3">
                                <label class="form-label">Position</label>
                                <select name="position" class="form-select">
                                    <option value="bottom-right" selected>Bottom Right</option>
                                    <option value="bottom-left">Bottom Left</option>
                                    <option value="top-right">Top Right</option>
                                    <option value="top-left">Top Left</option>
                                    <option value="center">Center</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Size</label>
                                <select name="size" class="form-select">
                                    <option value="small">Small (10%)</option>
                                    <option value="medium" selected>Medium (15%)</option>
                                    <option value="large">Large (20%)</option>
                                    <option value="xlarge">Extra Large (25%)</option>
                                </select>
                            </div>

                            <button type="submit" asp-page-handler="Process" class="btn btn-success">Add Logo with AI</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.CurrentPrompt))
        {
            <div class="card mt-3">
                <div class="card-body">
                    <h6>AI Prompt Used:</h6>
                    <p class="text-muted">@Model.CurrentPrompt</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ResultImageUrl))
        {
            <div class="card mt-3">
                <div class="card-body text-center">
                    <h5>Result</h5>
                    <img src="@Model.ResultImageUrl" class="img-fluid mb-3" style="max-height: 400px;">
                    <div>
                        <a href="@Model.ResultImageUrl" class="btn btn-primary" download>Download Result</a>
                        <a href="@Url.Page("AddLogo")" class="btn btn-secondary">Try Another</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
