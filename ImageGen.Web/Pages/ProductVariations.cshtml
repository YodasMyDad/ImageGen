@page
@model ProductVariationsModel
@{
    ViewData["Title"] = "Product Variations";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Product Variations</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-5 fw-bold">
                    <i class="bi bi-shuffle text-danger"></i> Product Variations
                </h1>
                <p class="lead text-muted">
                    Generate multiple creative variations of your product images with different styles,
                    artistic interpretations, and visual treatments.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-upload"></i> Upload Product Image
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" id="uploadForm">
                            <input type="hidden" name="originalImageUrl" value="@Model.OriginalImageUrl" />

                            <div class="upload-zone mb-3" id="uploadZone">
                                <div id="uploadZoneContent">
                                    <i class="bi bi-cloud-upload display-4 text-muted mb-3"></i>
                                    <h5>Drag & drop a product image here</h5>
                                    <p class="text-muted">or click to browse files</p>
                                    <button type="button" class="btn btn-danger" onclick="document.getElementById('imageFile').click()">
                                        <i class="bi bi-folder"></i> Choose File
                                    </button>
                                </div>
                                <input type="file" name="imageFile" id="imageFile" accept="image/*" class="d-none" required>
                            </div>

                            <div class="mb-3">
                                <label for="variationStyle" class="form-label">Variation Style</label>
                                <select class="form-select" id="variationStyle" name="variationStyle">
                                    <option value="artistic">Artistic & Creative</option>
                                    <option value="minimalist">Minimalist Design</option>
                                    <option value="vibrant">Vibrant & Colorful</option>
                                    <option value="luxury">Luxury & Elegant</option>
                                    <option value="vintage">Vintage Style</option>
                                    <option value="modern">Modern & Contemporary</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="count" class="form-label">Number of Variations</label>
                                <select class="form-select" id="count" name="count">
                                    <option value="2">2 Variations</option>
                                    <option value="3">3 Variations</option>
                                    <option value="4" selected>4 Variations</option>
                                </select>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                                </div>
                            }

                            @if (Model.OriginalImageUrl != null)
                            {
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> Image uploaded successfully! Click "Generate Variations" to process.
                                </div>
                            }

                            <button type="submit" class="btn btn-danger w-100" asp-page-handler="Upload">
                                <i class="bi bi-upload"></i> Upload Image
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-images"></i> Generated Variations
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (Model.OriginalImageUrl != null)
                        {
                            <div class="mb-4">
                                <h6>Original Product</h6>
                                <img src="@Model.OriginalImageUrl" alt="Original" class="image-preview mb-3" style="max-height: 150px;">
                            </div>
                        }

                        @if (Model.VariationUrls != null && Model.VariationUrls.Any())
                        {
                            <div class="mb-4">
                                <h6>Generated Variations</h6>
                                <div class="row g-2">
                                    @for (int i = 0; i < Model.VariationUrls.Count; i++)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="border rounded p-2">
                                                <img src="@Model.VariationUrls[i]" alt="Variation @(i + 1)" class="image-preview mb-2" style="width: 100%; max-height: 120px;">
                                                <a href="@Model.VariationUrls[i]" class="btn btn-sm btn-outline-primary" download>
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-outline-danger" onclick="location.reload()">
                                    <i class="bi bi-arrow-clockwise"></i> Create New Variations
                                </button>
                            </div>
                        }
                        else if (Model.OriginalImageUrl != null)
                        {
                            <div class="text-center py-5">
                                <form method="post" class="d-inline">
                                    <input type="hidden" name="originalImageUrl" value="@Model.OriginalImageUrl" />
                                    <input type="hidden" name="variationStyle" value="@Model.VariationStyle" />
                                    <input type="hidden" name="count" value="@Model.Count" />

                                    <button type="submit" class="btn btn-danger" asp-page-handler="Process">
                                        <i class="bi bi-magic"></i> Generate Variations
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-images display-4 mb-3"></i>
                                <p>Upload a product image to generate creative variations</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-palette"></i> Variation Styles Explained
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-primary"><i class="bi bi-brush"></i> Artistic & Creative</h6>
                                    <p class="small text-muted">Transform your product into artistic compositions with creative elements, abstract backgrounds, and artistic styling.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-secondary"><i class="bi bi-square"></i> Minimalist Design</h6>
                                    <p class="small text-muted">Clean, simple compositions focusing on the product with minimal distractions and elegant simplicity.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-success"><i class="bi bi-palette"></i> Vibrant & Colorful</h6>
                                    <p class="small text-muted">Enhance colors, add vibrant elements, and create eye-catching compositions with bold color schemes.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-warning"><i class="bi bi-gem"></i> Luxury & Elegant</h6>
                                    <p class="small text-muted">Premium styling with sophisticated backgrounds, elegant lighting, and luxury brand aesthetics.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-info"><i class="bi bi-clock-history"></i> Vintage Style</h6>
                                    <p class="small text-muted">Retro and nostalgic treatments with vintage color palettes, textures, and classic design elements.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-danger"><i class="bi bi-lightning"></i> Modern & Contemporary</h6>
                                    <p class="small text-muted">Current design trends with contemporary styling, geometric elements, and modern aesthetics.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Drag and drop functionality
        const uploadZone = document.getElementById('uploadZone');
        const uploadZoneContent = document.getElementById('uploadZoneContent');
        const fileInput = document.getElementById('imageFile');

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                // Update content without destroying the file input
                uploadZoneContent.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                               <h5>File selected: ${files[0].name}</h5>
                                               <p class="text-muted">Click "Upload Image" to continue</p>`;
            }
        });

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                uploadZoneContent.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                               <h5>File selected: ${file.name}</h5>
                                               <p class="text-muted">Click "Upload Image" to continue</p>`;
            }
        });
    </script>
}
