@page
@model EnhanceProductModel
@{
    ViewData["Title"] = "Enhance Product";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enhance Product</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-5 fw-bold">
                    <i class="bi bi-stars text-info"></i> Enhance Product
                </h1>
                <p class="lead text-muted">
                    Improve your product photos with professional lighting, enhanced details,
                    and studio-quality retouching using AI.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-upload"></i> Upload Product Image
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" id="uploadForm">
                            <div class="upload-zone mb-3" id="uploadZone">
                                <i class="bi bi-cloud-upload display-4 text-muted mb-3"></i>
                                <h5>Drag & drop a product image here</h5>
                                <p class="text-muted">or click to browse files</p>
                                <input type="file" name="imageFile" id="imageFile" accept="image/*" class="d-none" required>
                                <button type="button" class="btn btn-info" onclick="document.getElementById('imageFile').click()">
                                    <i class="bi bi-folder"></i> Choose File
                                </button>
                            </div>

                            <div class="mb-3">
                                <label for="enhancementType" class="form-label">Enhancement Type</label>
                                <select class="form-select" id="enhancementType" name="enhancementType">
                                    <option value="lighting">Professional Lighting</option>
                                    <option value="details">Enhanced Details & Sharpness</option>
                                    <option value="studio">Studio Quality Retouch</option>
                                    <option value="colors">Vivid Colors & Contrast</option>
                                    <option value="texture">Enhanced Textures</option>
                                    <option value="all">Complete Enhancement</option>
                                </select>
                            </div>

                            @if (Model.OriginalImageUrl != null)
                            {
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> Image uploaded successfully! Click "Enhance Product" to process.
                                </div>
                            }

                            <button type="submit" class="btn btn-info w-100" asp-page-handler="Upload">
                                <i class="bi bi-upload"></i> Upload Image
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-image"></i> Enhanced Result
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (Model.OriginalImageUrl != null)
                        {
                            <div class="mb-4">
                                <h6>Original Product</h6>
                                <img src="@Model.OriginalImageUrl" alt="Original" class="image-preview mb-3" style="max-height: 200px;">
                            </div>
                        }

                        @if (Model.ProcessedImageUrl != null)
                        {
                            <div class="mb-4">
                                <h6>Enhanced Product</h6>
                                <img src="@Model.ProcessedImageUrl" alt="Enhanced" class="image-preview mb-3" style="max-height: 300px;">
                            </div>

                            <div class="d-flex gap-2 justify-content-center">
                                <a href="@Model.ProcessedImageUrl" class="btn btn-primary" download>
                                    <i class="bi bi-download"></i> Download
                                </a>
                                <button class="btn btn-outline-info" onclick="location.reload()">
                                    <i class="bi bi-arrow-clockwise"></i> Try Another
                                </button>
                            </div>
                        }
                        else if (Model.OriginalImageUrl != null)
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-info mb-3" role="status">
                                    <span class="visually-hidden">Processing...</span>
                                </div>
                                <p class="text-muted">Enhancing product...</p>
                                <form method="post" class="d-inline">
                                    <button type="submit" class="btn btn-info" asp-page-handler="Process">
                                        <i class="bi bi-magic"></i> Enhance Product
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-image display-4 mb-3"></i>
                                <p>Upload a product image to see the enhancement result</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Enhancement Options
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-info"><i class="bi bi-lightbulb"></i> Professional Lighting</h6>
                                    <p class="small text-muted">Improve lighting with studio-quality shadows, highlights, and even illumination.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-primary"><i class="bi bi-zoom-in"></i> Enhanced Details</h6>
                                    <p class="small text-muted">Sharpen fine details, improve texture visibility, and enhance product features.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-success"><i class="bi bi-camera"></i> Studio Quality</h6>
                                    <p class="small text-muted">Complete professional retouching with color correction and blemish removal.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-warning"><i class="bi bi-palette"></i> Vivid Colors</h6>
                                    <p class="small text-muted">Enhance color vibrancy, improve contrast, and make products more visually appealing.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-danger"><i class="bi bi-texture"></i> Enhanced Textures</h6>
                                    <p class="small text-muted">Bring out material textures, fabric details, and surface characteristics.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-secondary"><i class="bi bi-stars"></i> Complete Enhancement</h6>
                                    <p class="small text-muted">All enhancements combined for maximum professional quality improvement.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-light" role="alert">
                    <i class="bi bi-lightbulb"></i>
                    <strong>Pro tip:</strong> For best results, start with high-quality original photos.
                    The AI enhancement works best on well-lit images with good composition.
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Drag and drop functionality
        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('imageFile');

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                // Auto-submit or show preview
                uploadZone.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                       <h5>File selected: ${files[0].name}</h5>
                                       <p class="text-muted">Click "Upload Image" to continue</p>`;
            }
        });

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                uploadZone.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                       <h5>File selected: ${file.name}</h5>
                                       <p class="text-muted">Click "Upload Image" to continue</p>`;
            }
        });
    </script>
}
