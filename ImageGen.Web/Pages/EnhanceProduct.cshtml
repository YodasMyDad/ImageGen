@page
@model EnhanceProductModel
@{
    ViewData["Title"] = "Enhance Product";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enhance Product</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-5 fw-bold">
                    <i class="bi bi-stars text-info"></i> Enhance Product
                </h1>
                <p class="lead text-muted">
                    Improve your product photos with professional lighting, enhanced details,
                    and studio-quality retouching using AI.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                @if (string.IsNullOrEmpty(Model.OriginalImageUrl))
                {
                    <!-- Step 1: Upload -->
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-upload"></i> Step 1: Upload Product Image
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data" id="uploadForm">
                                <div class="upload-zone mb-3" id="uploadZone">
                                    <div id="uploadZoneContent">
                                        <i class="bi bi-cloud-upload display-4 text-muted mb-3"></i>
                                        <h5>Drag & drop a product image here</h5>
                                        <p class="text-muted">or click to browse files</p>
                                        <button type="button" class="btn btn-info" onclick="document.getElementById('imageFile').click()">
                                            <i class="bi bi-folder"></i> Choose File
                                        </button>
                                    </div>
                                    <input type="file" name="imageFile" id="imageFile" accept="image/*" class="d-none" required>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                                    </div>
                                }

                                <button type="submit" class="btn btn-info w-100" asp-page-handler="Upload">
                                    <i class="bi bi-upload"></i> Upload Image
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Step 2: Configure Enhancement -->
                    <div class="card shadow">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-gear"></i> Step 2: Configure Enhancement
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="enhancementType" class="form-label">Enhancement Type</label>
                                <select class="form-select" id="enhancementType">
                                    <option value="lighting" selected="@(Model.EnhancementType == "lighting")">Professional Lighting</option>
                                    <option value="details" selected="@(Model.EnhancementType == "details")">Enhanced Details & Sharpness</option>
                                    <option value="studio" selected="@(Model.EnhancementType == "studio")">Studio Quality Retouch</option>
                                    <option value="colors" selected="@(Model.EnhancementType == "colors")">Vivid Colors & Contrast</option>
                                    <option value="texture" selected="@(Model.EnhancementType == "texture")">Enhanced Textures</option>
                                    <option value="all" selected="@(Model.EnhancementType == "all")">Complete Enhancement</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="prompt" class="form-label">AI Prompt</label>
                                <textarea name="prompt" id="prompt" class="form-control" rows="3" placeholder="Enter your prompt for enhancement">@Model.Prompt</textarea>
                            </div>

                            <form method="post">
                                <input type="hidden" name="originalImageUrl" value="@Model.OriginalImageUrl" />
                                <input type="hidden" name="processedImageUrl" value="@Model.ProcessedImageUrl" />
                                <input type="hidden" name="enhancementType" id="selectedEnhancementType" value="@Model.EnhancementType" />
                                <input type="hidden" name="prompt" id="finalPrompt" value="@Model.Prompt" />

                                <button type="submit" class="btn btn-info w-100" asp-page-handler="Process">
                                    <i class="bi bi-magic"></i> Enhance Product
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-image"></i> @if (string.IsNullOrEmpty(Model.ProcessedImageUrl)) { <text>Preview</text> } else { <text>Enhanced Result</text> }
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (Model.OriginalImageUrl != null)
                        {
                            <div class="mb-4">
                                <h6>Your Product</h6>
                                <img src="@Model.OriginalImageUrl" alt="Original" class="image-preview mb-3" style="max-height: 250px;">
                            </div>
                        }

                        @if (Model.ProcessedImageUrl != null)
                        {
                            <div class="mb-4">
                                <h6>Enhanced Product</h6>
                                <img src="@Model.ProcessedImageUrl" alt="Enhanced" class="image-preview mb-3" style="max-height: 250px;">
                            </div>

                            <div class="d-flex gap-2 justify-content-center">
                                <a href="@Model.ProcessedImageUrl" class="btn btn-primary" download>
                                    <i class="bi bi-download"></i> Download
                                </a>
                                <a href="@Url.Page("EnhanceProduct")" class="btn btn-outline-info">
                                    <i class="bi bi-arrow-clockwise"></i> Try Another
                                </a>
                            </div>
                        }
                        else if (string.IsNullOrEmpty(Model.OriginalImageUrl))
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-image display-4 mb-3"></i>
                                <p>Upload a product image to see the preview</p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3 text-muted">
                                <i class="bi bi-magic display-4 mb-3 text-info"></i>
                                <p>Configure your enhancement options and click "Enhance Product" to process</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Enhancement Options
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-info"><i class="bi bi-lightbulb"></i> Professional Lighting</h6>
                                    <p class="small text-muted">Improve lighting with studio-quality shadows, highlights, and even illumination.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-primary"><i class="bi bi-zoom-in"></i> Enhanced Details</h6>
                                    <p class="small text-muted">Sharpen fine details, improve texture visibility, and enhance product features.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-success"><i class="bi bi-camera"></i> Studio Quality</h6>
                                    <p class="small text-muted">Complete professional retouching with color correction and blemish removal.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-warning"><i class="bi bi-palette"></i> Vivid Colors</h6>
                                    <p class="small text-muted">Enhance color vibrancy, improve contrast, and make products more visually appealing.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-danger"><i class="bi bi-texture"></i> Enhanced Textures</h6>
                                    <p class="small text-muted">Bring out material textures, fabric details, and surface characteristics.</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-secondary"><i class="bi bi-stars"></i> Complete Enhancement</h6>
                                    <p class="small text-muted">All enhancements combined for maximum professional quality improvement.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-light" role="alert">
                    <i class="bi bi-lightbulb"></i>
                    <strong>Pro tip:</strong> For best results, start with high-quality original photos.
                    The AI enhancement works best on well-lit images with good composition.
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Enhancement type prompts
        const enhancementPrompts = {
            'lighting': 'Improve the lighting to be professional and studio-quality. Add proper shadows, highlights, and even illumination. Make the product look professionally photographed.',
            'details': 'Enhance sharpness and details. Make fine textures and product features more visible and crisp. Improve overall image clarity and definition.',
            'studio': 'Apply complete professional studio retouching. Fix any imperfections, improve colors, enhance lighting, and make the product look like a high-end catalog photo.',
            'colors': 'Enhance colors and contrast. Make colors more vivid and appealing. Improve color balance and saturation for better visual impact.',
            'texture': 'Enhance material textures and surface details. Make fabrics, metals, woods, or other materials look more realistic and tactile.',
            'all': 'Apply complete professional enhancement: improve lighting, enhance details and sharpness, boost colors, enhance textures, and apply studio-quality retouching. Make this look like a premium product photograph.'
        };

        function updatePrompt() {
            const enhancementTypeSelect = document.getElementById('enhancementType');
            const promptTextarea = document.getElementById('prompt');
            const selectedType = enhancementTypeSelect.value;

            if (promptTextarea && enhancementPrompts[selectedType]) {
                promptTextarea.value = enhancementPrompts[selectedType];
                // Update hidden field for form submission
                const hiddenTypeField = document.getElementById('selectedEnhancementType');
                const hiddenPromptField = document.getElementById('finalPrompt');
                if (hiddenTypeField) hiddenTypeField.value = selectedType;
                if (hiddenPromptField) hiddenPromptField.value = promptTextarea.value;
            }
        }

        function updateHiddenFields() {
            const enhancementTypeSelect = document.getElementById('enhancementType');
            const promptTextarea = document.getElementById('prompt');
            const hiddenTypeField = document.getElementById('selectedEnhancementType');
            const hiddenPromptField = document.getElementById('finalPrompt');

            if (hiddenTypeField && enhancementTypeSelect) {
                hiddenTypeField.value = enhancementTypeSelect.value;
            }
            if (hiddenPromptField && promptTextarea) {
                hiddenPromptField.value = promptTextarea.value;
            }
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            const enhancementTypeSelect = document.getElementById('enhancementType');
            const promptTextarea = document.getElementById('prompt');

            if (enhancementTypeSelect) {
                enhancementTypeSelect.addEventListener('change', updatePrompt);

                // Update hidden fields when prompt changes
                if (promptTextarea) {
                    promptTextarea.addEventListener('input', updateHiddenFields);
                }

                // Set initial prompt
                updatePrompt();
            }

            // Drag and drop functionality (only if upload zone exists)
            const uploadZone = document.getElementById('uploadZone');
            if (uploadZone) {
                const uploadZoneContent = document.getElementById('uploadZoneContent');
                const fileInput = document.getElementById('imageFile');

                uploadZone.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadZone.classList.add('dragover');
                });

                uploadZone.addEventListener('dragleave', () => {
                    uploadZone.classList.remove('dragover');
                });

                uploadZone.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadZone.classList.remove('dragover');

                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        fileInput.files = files;
                        // Update content without destroying the file input
                        uploadZoneContent.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                                       <h5>File selected: ${files[0].name}</h5>
                                                       <p class="text-muted">Click "Upload Image" to continue</p>`;
                    }
                });

                if (fileInput) {
                    fileInput.addEventListener('change', () => {
                        if (fileInput.files.length > 0) {
                            const file = fileInput.files[0];
                            uploadZoneContent.innerHTML = `<i class="bi bi-file-earmark-image display-4 text-success mb-3"></i>
                                                           <h5>File selected: ${file.name}</h5>
                                                           <p class="text-muted">Click "Upload Image" to continue</p>`;
                        }
                    });
                }
            }
        });
    </script>
}
